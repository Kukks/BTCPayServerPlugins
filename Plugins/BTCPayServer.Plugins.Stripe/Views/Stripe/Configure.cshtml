@using BTCPayServer.Abstractions.Extensions
@model BTCPayServer.Plugins.Stripe.PaymentHandler.StripePaymentMethodConfig
@{
    ViewData.SetActivePage("Stripe", "Stripe Settings", "Stripe");
}

<form method="post">
    <div class="sticky-header-setup"></div>
    <div class="sticky-header d-sm-flex align-items-center justify-content-between">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <div class="d-flex gap-3 mt-3 mt-sm-0">
            <button name="command" type="submit" value="save" class="btn btn-primary">Save</button>
        </div>
    </div>

    <partial name="_StatusMessage"/>

    <div class="row">
        <div class="col-xl-8 col-xxl-constrain">
            @if (Model.IsConfigured)
            {
                <div class="alert @(Model.IsTestMode ? "alert-warning" : "alert-info") mb-4">
                    <strong>@(Model.IsTestMode ? "Test Mode" : "Live Mode")</strong>:
                    @(Model.IsTestMode
                        ? "Using Stripe test API keys. Payments will not be real."
                        : "Using Stripe live API keys. Payments will be real.")
                </div>
            }

            <div class="form-group">
                <div class="d-flex align-items-center">
                    <input asp-for="Enabled" type="checkbox" class="btcpay-toggle me-2"/>
                    <label asp-for="Enabled" class="form-label mb-0">Enable Stripe Payments</label>
                </div>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div
            <h4 class="mt-4 mb-3">API Configuration</h4>

            <div class="form-group">
                <label asp-for="PublishableKey" class="form-label" data-required>Publishable Key</label>
                <input asp-for="PublishableKey" type="text" class="form-control" placeholder="pk_live_... or pk_test_..."/>
                <span asp-validation-for="PublishableKey" class="text-danger"></span>
                <div class="form-text">
                    Your Stripe publishable API key (starts with pk_).
                    <a href="https://dashboard.stripe.com/apikeys" target="_blank" rel="noreferrer noopener">Get from Stripe Dashboard</a>
                    or <a href="https://dashboard.stripe.com/test/apikeys" target="_blank" rel="noreferrer noopener">Test Keys</a>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SecretKey" class="form-label" data-required>Secret Key</label>
                <input asp-for="SecretKey" type="password" class="form-control" placeholder="sk_live_... or sk_test_..."/>
                <span asp-validation-for="SecretKey" class="text-danger"></span>
                <div class="form-text">
                    Your Stripe secret API key (starts with sk_).
                    <a href="https://dashboard.stripe.com/apikeys" target="_blank" rel="noreferrer noopener">Get from Stripe Dashboard</a>
                    or <a href="https://dashboard.stripe.com/test/apikeys" target="_blank" rel="noreferrer noopener">Test Keys</a>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SettlementCurrency" class="form-label" data-required>Settlement Currency</label>
                <input asp-for="SettlementCurrency" type="text" class="form-control" placeholder="USD" maxlength="3"/>
                <span asp-validation-for="SettlementCurrency" class="text-danger"></span>
                <div class="form-text">Currency code for Stripe charges (e.g., USD, EUR, GBP)</div>
            </div>

            <div class="d-flex gap-2 mt-3 mb-4">
                <button name="command" type="submit" value="test" class="btn btn-secondary">
                    Test Connection
                </button>
            </div>

            <h4 class="mt-4 mb-3">Advanced Settings</h4>

            <div class="collapse-trigger" data-bs-toggle="collapse" data-bs-target="#advancedSettings" aria-expanded="false">
                <span class="text-secondary">Show advanced settings</span>
            </div>

            <div id="advancedSettings" class="collapse mt-3">
                <div class="form-group">
                    <label asp-for="StatementDescriptor" class="form-label">Statement Descriptor</label>
                    <input asp-for="StatementDescriptor" type="text" class="form-control" maxlength="22"/>
                    <span asp-validation-for="StatementDescriptor" class="text-danger"></span>
                    <div class="form-text">Text that appears on customer bank statements (max 22 characters)</div>
                </div>

                <div class="form-group">
                    <div class="d-flex align-items-center">
                        <input asp-for="EnableApplePay" type="checkbox" class="btcpay-toggle me-2"/>
                        <label asp-for="EnableApplePay" class="form-label mb-0">Enable Apple Pay</label>
                    </div>
                    <div class="form-text">Allow customers to pay using Apple Pay (requires domain verification in Stripe)</div>
                </div>

                <div class="form-group">
                    <div class="d-flex align-items-center">
                        <input asp-for="EnableGooglePay" type="checkbox" class="btcpay-toggle me-2"/>
                        <label asp-for="EnableGooglePay" class="form-label mb-0">Enable Google Pay</label>
                    </div>
                    <div class="form-text">Allow customers to pay using Google Pay</div>
                </div>

                <h5 class="mt-4 mb-3">Webhook Configuration (Optional)</h5>

                <p class="text-muted">
                    Webhooks enable real-time payment notifications. Without webhooks, payments are verified
                    synchronously when the customer completes payment.
                </p>

                <div class="form-group">
                    <label asp-for="WebhookId" class="form-label">Webhook Endpoint ID</label>
                    <input asp-for="WebhookId" type="text" class="form-control" readonly/>
                    <div class="form-text">Auto-generated Stripe webhook endpoint ID</div>
                </div>

                <div class="form-group">
                    <label asp-for="WebhookSecret" class="form-label">Webhook Signing Secret</label>
                    <input asp-for="WebhookSecret" type="password" class="form-control" placeholder="whsec_..."/>
                    <span asp-validation-for="WebhookSecret" class="text-danger"></span>
                    <div class="form-text">
                        Webhook signing secret for verifying events (starts with whsec_).
                        <a href="https://dashboard.stripe.com/webhooks" target="_blank">Get from Stripe Dashboard</a>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button name="command" type="submit" value="registerwebhook" class="btn btn-secondary">
                        Auto-Register Webhook
                    </button>
                </div>
                <div class="form-text mt-2">
                    Attempts to automatically register a webhook endpoint with Stripe.
                    Requires a publicly accessible URL (not localhost).
                </div>
            </div>
        </div>
    </div>
</form>

@section PageFootContent {
    <script>
        // Show advanced settings if any are configured
        document.addEventListener('DOMContentLoaded', function() {
            const webhookId = document.querySelector('[name="WebhookId"]')?.value;
            const webhookSecret = document.querySelector('[name="WebhookSecret"]')?.value;
            const statementDescriptor = document.querySelector('[name="StatementDescriptor"]')?.value;

            if (webhookId || webhookSecret || statementDescriptor) {
                const advancedSettings = document.getElementById('advancedSettings');
                if (advancedSettings) {
                    advancedSettings.classList.add('show');
                }
            }
        });
    </script>
}
